<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	
	<bean id="baseAction" class="cn.itcast.action.BaseAction">
			<property name="accountService" ref="accountService"></property>
			<property name="goodsService" ref="goodsService"></property>
			<property name="categoryService" ref="categoryService"></property>
			<property name="fileUploadUtil" ref="fileUploadUtil"></property>
			<property name="sorderService" ref="sorderService"></property>
			<property name="forderService" ref="forderService"></property>
	</bean>

	<bean id="accountAction" class="cn.itcast.action.AccountAction" scope="prototype" parent="baseAction"/>
	<bean id="categoryAction" class="cn.itcast.action.CategoryAction" scope="prototype" parent="baseAction"></bean>
	<bean id="goodsAction" class="cn.itcast.action.GoodsAction" scope="prototype" parent="baseAction"></bean>
	<bean id="sorderAction" class="cn.itcast.action.SorderAction" scope="prototype" parent="baseAction"></bean>
	
	</beans>